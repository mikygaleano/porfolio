import CardProyect from './CardProyect.astro';

const proyects = [
    {
        title: 'to-do-list',
        body: 'Proyecto en donde dise√±e mi primer web',
        skills: [{
            skill: 'JAVASCRIPT',
            tag: 'js-tag',
            fa: 'fa-js'
        }, {
            skill: 'HTML',
            tag: 'html-tag',
            fa: 'fa-html5'
        }, {
