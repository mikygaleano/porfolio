    <div class="w-10/12 h-full flex max-md:flex-col flex-row flex-wrap gap-3 justify-start items-center pl-20 pr-20 max-md:p-0">
        {
            proyects.map(({title, body, skills, href, image, alt}) => 
                <CardProyect title={title} image={image} alt={alt} body={body} skills={skills} href={href}/>
            )
        }
    </div>
