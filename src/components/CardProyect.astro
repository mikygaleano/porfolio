---

interface Props {
    image: string;
    alt: string;
	title: string;
	body: string;
    skills: {
        skill: string,
        tag: string,
        icon: string
    }[];
    hrefWeb: string;
	hrefRepo: string;
}

const { hrefRepo, hrefWeb, image, alt, title, skills, body } = Astro.props;
---



    <div class="card animate__animated animate__fadeInUp max-md:w-screen">
        <img src={image} alt={alt} class="card-image">
        <div class="card-content">
            <div class="-z-10 backdrop-blur-3xl absolute top-0 bottom-0 left-0 right-0"></div>
            <h2 class="card-title text-black animate__animated animate__fadeInDown">{title}</h2>
            <p class="card-description animate__animated animate__fadeIn">{body}</p>
            <div class="card-languages animate__animated animate__fadeIn">
                {
                    skills.map(({skill, tag, icon}) => 
                        <span class={`language-tag ${tag}`}><img class={`icon`} src={icon}></img>{skill}</span>
                    )
                }
            </div>
            <div class="flex flex-row gap-3">
                <a href={hrefRepo} class="card-link" target="_blank">
                    <i class="fab fa-github"></i>codigo
                </a>
                <a href={hrefWeb} class="card-link" target="_blank">
                    <i class="fab"></i>web
                </a>
            </div>
        </div>
    </div>


    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap');

        .card {
            width: 350px;
            height: 500px;
            border-radius: 20px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); /* Sombra m√°s amplia para profundidad */
            overflow: hidden;
            transform-style: preserve-3d;
            perspective: 1000px;
        }


        .card-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: all 0.5s ease;
        }

        .card:hover .card-image {
            transform: scale(1.1);
        }

        .card-content {
            padding: 25px;
            background: rgba(255, 255, 255, 0.123); /* Fondo blanco con transparencia */
        }

        .card-title {
            font-family: 'Orbitron', sans-serif;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.7);
        }

        .card-description {
            font-size: 16px;
            color: #080808;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .card-languages {
            display: flex;
            gap: 12px;
            margin-bottom: 25px;
        }

        .language-tag {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 3px;
            padding: 6px 12px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            font-size: 10px;
            color: #fff;
            transition: all 0.3s ease;
        }

        .language-tag:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(233, 191, 5, 0.3);
        }

        .language-tag i {
            font-size: 16px;
        }

        .icon {
            width: 10px;
            height: 10px;
        }

        .html-tag { color: #E44D26; }
        .css-tag { color: #264DE4; }
        .js-tag { color: #F0DB4F; }
        .ts-tag {color: #6e87eb}
        .tailwindcss-tag {color: #2bebcb;}

        .card-link {
            width: 150px;
            height: 50px;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            gap: 3px;
            padding: 12px 24px;
            background: linear-gradient(45deg, #00ffff, #ff00ff);
            color: #111;
            text-decoration: none;
            border-radius: 25px;
            transition: all 0.3s ease;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .card-link:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 255, 255, 0.4);
        }

        .card-link::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.2);
            transform: rotate(45deg);
            transition: all 0.3s ease;
        }

        .card-link:hover::before {
            left: 100%;
        }
    </style>