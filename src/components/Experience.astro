---

const exper = [
    {
        fecha: 'Actualmente',
        puesto: 'Programador web',
        parrafo: ['Desarrollo web de manera freelance']
    },
    {
        fecha: 'Marzo 2023',
        puesto: 'programador web',
        parrafo: ['Fui integrante, como desarrollador en un equipo de la startup identikit app.', 'Para desarrollar una web informativa para una aseguradora']
    }
];

---

<section class="w-full flex flex-col justify-start items-center" id="experience">
    <div class="w-10/12 h-full flex flex-1 flex-col justify-center items-center">
        <div class="flex flex-row gap-5">
            <img class="w-8 h-8" src="./office-job.svg" alt="job">
            <h2 class="font-semibold text-3xl text-center">Experiencia laboral</h2>
        </div>
        <div class="h-fit flex flex-col items-center mt-10">
            <div class="w-full h-fit flex flex-col gap-10 border-l border-slate-300">
                {
                
                    exper.map(item => (
                        <article class="w-full h-fit relative -left-1.5 mt-2">
                            <div class="flex flex-row items-center gap-3">
                                <div class="w-3 h-3 rounded-full bg-black relative"></div>
                                <h4 class="text-blue-600 font-semibold text-xs">{item.fecha}</h4>                            
                            </div>
                            <div class="max-w-fit p-5">
                                <h4 class="text-orange-700 font-semibold text-xl">{item.puesto}</h4>
                                {
                                    item.parrafo.map((linea) => (
                                        <p class="max-w-96 font-semibold text-xl text-wrap">{linea}</p>
                                    ))
                                }
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </div>
</section>